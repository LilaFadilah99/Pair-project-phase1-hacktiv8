<%- include('partials/header', {isLogin, isAdmin}) %>
<div class="container my-5">
  <div class="container-fluid">
    <h1 class="text-center">Restock Your New Product</h1>
    <br />
    <h5 class="text-center">Find out how easy it is to shop</h5>
    <br /><br />
    <div class="row justify-content-center py-5">
      <div class="col-6" style="background-color: white">
        <div class="container">
          <div class="container-fluid">
            <% for (const key of products) {%>
            <!-- form -->
            <form action="/products/<%= key.id %>/restock" method="post">
              <div class="mb-3">
                <label for="stock" class="form-label"> <h3>Restock Now, happy Later</h3> </label>
                <input type="number" class="form-control" id="stock" name="stock" />
              </div>
              <input class="btn btn text-white" type="submit" value="Submit" style="background-color: #13d0dc" />
            </form>
            <!-- end form -->
            <% } %>
            <br /><br />
            <br />
            <p>HeroBuy lets you buy now and pay later at your favorite stores at a schedule that’s convenient for you. An easy and transparent way to shop, we’ll show you your repayment schedule before you complete any purchase.</p>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="container">
          <div class="container-fluid">
            <img src="https://tendopay.ph/_nuxt/img/graphic-1.5b7d931.png" alt="" class="img-fluid" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
