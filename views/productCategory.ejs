<%- include('partials/header', {isLogin, isAdmin}) %>
<section id="allBody" style="background-color: #f4f7f9">
  <div class="container py-5">
    <div class="container-fluid">
      <h1 class="text-center"><%= category%></h1>
      <p class="text-center">Shop with over 400+ partner merchants online</p>
      <!-- Products Card -->
      <section id="productsCard">
        <div class="container-fluid my-5">
          <div class="container">
            <div class="row">
              <% for (const key of products) {%>
              <!-- card 1 -->
              <div class="mb-3 col-md-3 col-6">
                <div class="card h-100 rounded-2 shadow-sm poductsCard">
                  <div class="col">
                    <div class="inner">
                      <img src="<%= key.image %>" class="card-img-top img-fluid" alt="paket 1" style="width: auto; height: auto" />
                    </div>
                  </div>
                  <div class="card-body">
                    <p class="card-title fw-bold" style="font-size: 12px"><%= key.name %></p>
                    <p class="card-text" style="font-size: 12px">Stock : <%= key.stock %></p>
                    <p class="card-text" style="font-size: 12px"><%= formatPriceToEjs(key.price) %></p>
                    <a href="/products/<%= key.id %>/detail" style="text-decoration: none; color: #1ac0e4; font-size: 14px">Show detail</a>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </section>
      <!-- Products Card -->
    </div>
  </div>
</section>
<%- include('partials/footer') %>
