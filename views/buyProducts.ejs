<%- include('partials/header') %>
<div class="container my-5">
  <div class="container-fluid">
    <div class="row">
      <% for (const key of product) {%>
      <div class="col-2">
        <img src="<%= key.image %>" width="80px" height="80px" alt="" />
      </div>
      <div class="col-3">
        <p><%= key.name %></p>
      </div>
      <div class="col-3">
        <p><%= category %></p>
      </div>
      <div class="col-3">
        <p><%= formatPriceToEjs(key.price) %></p>
      </div>
    </div>
    <br />
    <a href="/products/<%= key.id %>/thank"><button type="button" class="btn btn-info">Checkout</button></a>
  </div>
  <% } %>
</div>
<%- include('partials/footer') %>
